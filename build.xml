<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="jar" name="Create Runnable Jar for Project timeflecks">
    <!--this file was created by Eclipse Runnable JAR Export Wizard-->
    <!--ANT 1.7 is required                                        -->
	<path id = "deps_classpath">
		<pathelement path="lib/sqlite-jdbc-3.8.6.jar" />
		<pathelement path="lib/junit-4.11.jar" />
		<pathelement path="lib/jcalendar-1.4.jar" />
		<pathelement path="lib/hamcrest-core-1.3.jar" />
	</path>
	<target name="clean">
		<delete dir="build"/>
	</target>
	
	<target name="compile">
		<mkdir dir="build/classes"/>
		<javac srcdir="src" destdir="build/classes" includeantruntime="false">
			<classpath refid="deps_classpath" />
		</javac>
	</target>
	
	<target name="jar" depends="compile">
		<mkdir dir="build/jar"/>
		<jar destfile="Timeflecks.jar" basedir="build/classes">
            <zipgroupfileset dir="lib" includes="*.jar" />
			<manifest>
	            <attribute name="Main-Class" value="core.Timeflecks"/>
			</manifest>
		</jar>
	</target>
	
    <target name="create_run_jar">
        <jar destfile="Timeflecks.jar" scrdir="src" filesetmanifest="mergewithoutmain">
			<manifest>
                <attribute name="Main-Class" value="core.Timeflecks"/>
                <attribute name="Class-Path" value="."/>
            </manifest>
            <fileset dir="bin"/>
            <zipfileset excludes="META-INF/*.SF" src="lib/sqlite-jdbc-3.8.6.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="lib/jcalendar-1.4.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="lib/junit-4.11.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="lib/hamcrest-core-1.3.jar"/>
        </jar>
    </target>
</project>
